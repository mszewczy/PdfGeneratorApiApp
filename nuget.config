<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<packageSources>
		<!-- Czyści wszystkie inne źródła i pozostawia tylko nuget.org -->
		<clear />
		<add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
	</packageSources>
	<packageSourceMapping>
		<!-- Ta sekcja wyłącza wszystkie inne źródła pakietów zdefiniowane poza tym plikiem -->
		<disablePackageSources>true</disablePackageSources>
		<!-- Określa, że WSZYSTKIE pakiety (*) mają pochodzić wyłącznie z nuget.org -->
		<packageSource key="nuget.org">
			<package pattern="*" />
		</packageSource>
	</packageSourceMapping>
</configuration>
